<Application x:Class="ServiceSalonApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ServiceSalonApp"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="ButtonFunctionStyle">
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TextBoxFunctionStyle">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="ComboBox" x:Key="ComboBoxFunctionStyle">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Application.Resources>
</Application>
